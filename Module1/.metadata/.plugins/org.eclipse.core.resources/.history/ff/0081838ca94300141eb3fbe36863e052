#ifndef PADDLE_H_
#define PADDLE_H_

const int leftBound = 0;
const int rightBound = 320;
const int moveScale = 1;
const int paddleHeight=10;

struct Paddle
{
	float x = 50;
	float y = paddleHeight;
	float xVelo = 0;
	float yVelo = 0;
};

void moveHorizontal(Paddle *paddle, int x);


#endif /* PADDLE_H_ */
