#ifndef BALL_H_
#define BALL_H_

const int ballMoveScale = 1;

typedef struct Ball
{
	float x;
	float y;
	float xVelo;
	float yVelo;
	int alive;
} Ball;

extern Ball *startBall(float x, float y, float xVelo, float yVelo);
extern void updatePosition(Ball *ball);

#endif /* BALL_H_ */
